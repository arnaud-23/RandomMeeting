<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity repository-class="AppBundle\Repository\Teams\TeamRepository" name="AppBundle\Entity\Teams\Team">
        <id name="id" type="integer" column="id">
            <generator strategy="SEQUENCE" />
        </id>

        <field name="createdAt" type="datetime" column="created_at" nullable="false" />
        <field name="name" type="string" column="name" length="255" nullable="false" />
        <field name="position" type="integer" column="position" nullable="true" />

        <many-to-many field="people" target-entity="AppBundle\Entity\People\Person">
            <join-table name="teams_people">
                <join-columns>
                    <join-column name="person_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="team_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>
